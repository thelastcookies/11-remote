/*1080p*/
html, body {
    margin: 0;
    padding: 0;
    border: 0;
    font-size: 100%;
    font: inherit;
    vertical-align: baseline;
    overflow-x: auto;
    height: 924px;
    width: 1530px;
    /*background:transparent;overflow:hidden;*/
}

body {
    font-family: 'Segoe UI', 'Hiragino Sans GB', 'Microsoft Yahei','微软雅黑', Arial, sans-serif;
}

.container {
    position: absolute;
    top: 0px;
    left: 0px;
    width: 1530px;
    height: 924px;
    background-image: url(../img/Station/Station_bg.png);
    filter: "progid:DXImageTransform.Microsoft.AlphaImageLoader(sizingMethod='scale')";
    -moz-background-size: 100% 100%;
    background-size: 100% 100%;
}
.nbq_bg,.nbq_flash 
{
position:absolute;
filter:"progid:DXImageTransform.Microsoft.AlphaImageLoader(sizingMethod='scale')";  
-moz-background-size:100% 100%;  
    background-size:100% 100%; 
}

#list_frame {
    position: absolute;
    top: 70px;
    left: 15px;
    width: 1470px;
    height: 756px;
    overflow-y: auto;
    overflow-x: hidden;
}

#list_content {
    width: 1480px;
    height: auto;
}

.nbq_frame {
    position: relative;
    cursor: pointer;
    width: 235px;
    height: 182px;
    float: left;
    color: #00ccff;
	-moz-transform:scaleX(0.67);       
    -webkit-transform:scaleX(0.67);   
    transform:scaleX(0.67);
}

    .nbq_frame:hover {
        color: #fff;
    }

.nbq_bg {
    bottom: 0px;
    left: 31px;
    width: 302px;
    height: 162px;
    background-image: url(../img/Station/station_list_bg.png);
}

.nbq_flash {
    top: -14px;
    left: 0px;
    width: 364px;
    height: 73px;
    display: none;
  background:url(../img/Station/flash-1.png) no-repeat 0 0;
  /*animation: flash 1s steps(8) infinite;*/
   animation:flash 0.8s steps(1) infinite;/*效果2*/
    -webkit-animation:flash 0.8s steps(1) infinite;/*效果2*/
}
@keyframes flash {
0% { background-position:4px 0;}
    12.5% {background-position:4px -73px;}
    25% {background-position:4px -146px ;}
    37.5% {background-position:4px -218px ;}
    50% {background-position:4px -291px ;}
    62.5% {background-position:4px -364px ;}
    75% {background-position:4px -437px ;}
    87.5% {background-position:4px -510px ;}
    100% {background-position:4px 0px ;}
}
@-webkit-keyframes flash /* Safari and Chrome */
{
0% { background-position:4px 0;}
    12.5% {background-position:4px -73px;}
    25% {background-position:4px -146px ;}
    37.5% {background-position:4px -218px ;}
    50% {background-position:4px -291px ;}
    62.5% {background-position:4px -364px ;}
    75% {background-position:4px -437px ;}
    87.5% {background-position:4px -510px ;}
    100% {background-position:4px 0px ;}
}

.nbq_title {
    position: absolute;
    top: 28px;
    left: 0px;
    width: 364px;
    height: 53px;
    text-align: center;
    font-size: 31px;
    line-height: 53px;
}

.nbq_dl, .nbq_gl {
    position: absolute;
    left: 91px;
    width: 224px;
    height: 39px;
    line-height: 39px;
    text-align: left;
    font-size: 22px;
}

.nbq_gl {
    top: 88px;
}

.nbq_dl {
    top: 127px;
}

.kuang_flash {
    width: 460px;
    height: 67px;
    background-image: url(../img/Station/flash.png);
    position: absolute;
    top: 8px;
    left: -100px;
    animation: mymove 5s linear infinite;
    -webkit-animation: mymove 5s linear infinite; /* Safari and Chrome */
}

@keyframes mymove {
    0% {
        left: -460px;
        opacity: 0;
    }

    30% {
        left: -460px;
        opacity: 0;
    }

    35% {
        opacity: 1;
    }

    65% {
        opacity: 1;
    }

    70% {
        opacity: 0;
        left: 2663px;
    }

    100% {
        opacity: 0;
        left: 2663px;
    }
}

@-webkit-keyframes mymove /* Safari and Chrome */
{
    0% {
        left: -460px;
        opacity: 0;
    }

    30% {
        left: -460px;
        opacity: 0;
    }

    35% {
        opacity: 1;
    }

    65% {
        opacity: 1;
    }

    70% {
        opacity: 0;
        left: 2663px;
    }

    100% {
        opacity: 0;
        left: 2663px;
    }
}
